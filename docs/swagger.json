{
  "openapi": "3.1.0",
  "info": {
    "version": "1.0.0",
    "title": "Students app",
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    },
    "description": "This is a documentation of students app"
  },
  "servers": [
    {
      "url": "https://superhero-backend-vrcc.onrender.com"
    }
  ],
  "tags": [
    {
      "name": "Students",
      "description": "Operations about users."
    },
    {
      "name": "Auth",
      "description": "Auth operations."
    }
  ],
  "paths": {
    "/students": {
      "get": {
        "tags": [
          "Superhero"
        ],
        "summary": "Get list of superhero",
        "operationId": "getSuperhero",
        "description": "Get list of users with this endpoint",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "query",
            "name": "page",
            "schema": {
              "type": "integer"
            },
            "example": 1
          },
          {
            "in": "query",
            "name": "perPage",
            "schema": {
              "type": "integer",
              "example": 5
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully found students!",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "status",
                    "message",
                    "data"
                  ],
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "Successfully found students!"
                    },
                    "data": {
                      "type": "object",
                      "required": [
                        "data",
                        "page",
                        "perPage",
                        "totalItems",
                        "totalPages",
                        "hasNextPage",
                        "hasPreviousPage"
                      ],
                      "properties": {
                        "data": {
                          "type": "array",
                          "items": {
                            "$ref": "#/components/schemas/superhero"
                          }
                        },
                        "page": {
                          "type": "number",
                          "example": 2
                        },
                        "perPage": {
                          "type": "number",
                          "example": 4
                        },
                        "totalItems": {
                          "type": "number",
                          "example": 4
                        },
                        "totalPages": {
                          "type": "number",
                          "example": 4
                        },
                        "hasNextPage": {
                          "type": "boolean",
                          "example": false
                        },
                        "hasPreviousPage": {
                          "type": "boolean",
                          "example": true
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/401"
          }
        }
      },
      "post": {
        "tags": [
          "Superhero"
        ],
        "summary": "Create superhero",
        "operationId": "createSuperhero",
        "description": "Create a superhero with payload",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "required": [
                  "nickname",
                  "real_name",
                  "origin_description",
                  "superpowers",
                  "catch_phrase",
                  "images"
                ],
                "properties": {
                  "nickname": {
                    "description": "Superhero's nickname",
                    "type": "string",
                    "example": "Wolverine"
                  },
                  "real_name": {
                    "description": "Superhero's real_name",
                    "type": "string",
                    "example": "Logan"
                  },
                  "origin_description": {
                    "description": "Superhero's origin_description",
                    "type": "string",
                    "example": "A mutant with an accelerated healing factor and retractable claws coated with indestructible adamantium."
                  },
                  "superpowers": {
                    "description": "Superhero's superpowers",
                    "type": "array",
                    "example": [
                      "Regeneration",
                      "Enhanced senses",
                      "Retractable claws",
                      "Immortality"
                    ]
                  },
                  "catch_phrase": {
                    "description": "Superhero's catch_phrase",
                    "type": "string",
                    "example": "I'm the best there is at what I do."
                  },
                  "images": {
                    "description": "Student's images",
                    "type": "array",
                    "example": [
                      "https://i.pinimg.com/736x/b0/53/4c/b0534c891f2720e31b735ce171993ff3.jpg"
                    ]
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Creates a superhero",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "status",
                    "message",
                    "data"
                  ],
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 201
                    },
                    "message": {
                      "type": "string",
                      "example": "Successfully created a superhero!"
                    },
                    "data": {
                      "type": "object",
                      "$ref": "#/components/schemas/superhero"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/401"
          }
        }
      }
    },
    "/students/{id}": {
      "get": {
        "tags": [
          "Superhero"
        ],
        "summary": "Get superhero by id",
        "operationId": "getSuperheroById",
        "description": "Get superhero by id",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "string",
              "example": "65ca67e7ae7f10c88b598384"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Get student by id",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "status",
                    "message",
                    "data"
                  ],
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "Successfully found superhero with id 65ca67e7ae7f10c88b598384!"
                    },
                    "data": {
                      "type": "object",
                      "$ref": "#/components/schemas/superhero"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/401"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    },
    "schemas": {
      "superhero": {
        "type": "object",
        "required": [
          "_id",
          "nickname",
          "real_name",
          "origin_description",
          "superpowers",
          "catch_phrase",
          "images"
        ],
        "properties": {
          "_id": {
            "description": "Superhero's id",
            "type": "string",
            "example": "65e4decdd286b30065d54af9"
          },
          "nickname": {
            "description": "Superhero's nickname",
            "type": "string",
            "example": "Wolverine"
          },
          "real_name": {
            "description": "Superhero's real_name",
            "type": "string",
            "example": "Logan"
          },
          "origin_description": {
            "description": "Superhero's origin_description",
            "type": "string",
            "example": "A mutant with an accelerated healing factor and retractable claws coated with indestructible adamantium."
          },
          "superpowers": {
            "description": "Superhero's superpowers",
            "type": "array",
            "items": {
              "type": "string"
            },
            "example": [
              "Regeneration",
              "Enhanced senses",
              "Retractable claws",
              "Immortality"
            ]
          },
          "catch_phrase": {
            "description": "Superhero's catch_phrase",
            "type": "string",
            "example": "I'm the best there is at what I do."
          },
          "images": {
            "description": "Superhero's images",
            "type": "array",
            "items": {
              "type": "string"
            },
            "example": [
              "https://i.pinimg.com/736x/b0/53/4c/b0534c891f2720e31b735ce171993ff3.jpg"
            ]
          }
        }
      }
    },
    "responses": {
      "401": {
        "description": "Unauthorized error",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "required": [
                "status",
                "message",
                "data"
              ],
              "properties": {
                "status": {
                  "type": "integer",
                  "example": 401
                },
                "message": {
                  "type": "string",
                  "example": "UnauthorizedError"
                },
                "data": {
                  "type": "object",
                  "required": [
                    "message"
                  ],
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Access token expired"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}